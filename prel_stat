:DOCTODOLIST = :TEXTEXEC = :STATEXEC = :DOCEXEC  = 0 ;
:STATUSTYPE = 'ZCLA_PREL';
:STATCNAME = 'STEPSTATUS' ;
:DOCCNAME = 'PROJACT' ;
:DOCNOCNAME = 'PROJACT' ;
:OWNERCNAME = 'OWNERLOGIN' ;
:INITSTATCNAME = 'INITFLAG' ;
:DOCDATENAME = 'STARTDATE' ;

SELECT EXEC INTO :DOCEXEC  
FROM EXEC 
WHERE 0=0
AND   ENAME = 'ZCLA_PROJELEM'
AND   TYPE = 'F' 
; 
 
SELECT EXEC INTO :STATEXEC
FROM EXEC WHERE ENAME = 'ZCLA_PRELSTATUSES'
AND TYPE = 'F' 
; 

INSERT INTO  STATUSTYPES (TYPE , DOCEXEC  )
SELECT :STATUSTYPE , :DOCEXEC
FROM DUMMY ;

UPDATE STATUSTYPES 
SET DOCEXEC = :DOCEXEC
,   STATEXEC = :STATEXEC
,   PROCEXEC = 0
,   STATCNAME = :STATCNAME
,   DOCCNAME = :DOCCNAME  
,   DOCNOCNAME = :DOCNOCNAME
,   OWNERCNAME = :OWNERCNAME
,   INITSTATCNAME = :INITSTATCNAME
,   DOCDATENAME = :DOCDATENAME
,   TEXTEXEC = :TEXTEXEC
,   TEXT2EXEC = 0
,   LOGEXEC = :LOGEXEC
,   STATTYPEVALUE = ''
WHERE TYPE = :STATUSTYPE
;

:INITSTAT = 'Draft';
INSERT INTO ZCLA_PRELSTATUSES
(STEPSTATUS,STEPSTATUSDES,INITFLAG)
VALUES(-1,:INITSTAT,'Y');

INSERT INTO DOCSTATUSES (ORIGSTATUSID,TYPE,STATDES, NEWDOCFLAG)
VALUES(-1, :STATUSTYPE, :INITSTAT,'Y');